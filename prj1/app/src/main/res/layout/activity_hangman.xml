        android:layout_height="@dimen/keyboard_size"
        android:text="j"
        android:layout_above="@+id/Z"
        android:layout_toRightOf="@+id/H"
        android:onClick="clickJ"/>

    <Button
        android:id="@+id/K"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="k"
        android:layout_above="@+id/Z"
        android:layout_toRightOf="@+id/J"
        android:onClick="clickK"/>

    <Button
        android:id="@+id/L"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="l"
        android:layout_above="@+id/Z"
        android:layout_toRightOf="@+id/K"
        android:onClick="clickL"/>

    <Button
        android:id="@+id/Q"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="q"
        android:layout_above="@+id/A"
        android:layout_alignParentLeft="true"
        android:onClick="clickQ"/>

    <Button
        android:id="@+id/W"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="w"
        android:layout_above="@+id/A"
        android:layout_toRightOf="@+id/Q"
        android:onClick="clickW"/>

    <Button
