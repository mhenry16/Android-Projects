    <Button
        android:id="@+id/U"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="u"
        android:layout_above="@+id/A"
        android:layout_toRightOf="@+id/Y"
        android:onClick="clickU"/>

    <Button
        android:id="@+id/I"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="i"
        android:layout_above="@+id/A"
        android:layout_toRightOf="@+id/U"
        android:onClick="clickI"/>

    <Button
        android:id="@+id/O"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="o"
        android:layout_above="@+id/A"
