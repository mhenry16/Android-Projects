        android:layout_toRightOf="@+id/D"
        android:onClick="clickF"/>

    <Button
        android:id="@+id/G"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="g"
        android:layout_above="@+id/Z"
        android:layout_toRightOf="@+id/F"
        android:onClick="clickG"/>

    <Button
