<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="prj1.csc214.prj1.HangmanActivity">

    <Button
        android:id="@+id/go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/go_back"
        android:onClick="goBackToHome"/>
    <TextView
        android:id="@+id/p1_name_hc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/between_home"/>

    <TextView
        android:id="@+id/p2_name_hc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/between_home"/>

    <TextView
        android:id="@+id/p1_score_hc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/between_home"
        android:layout_below="@+id/p1_name_hc"/>

    <TextView
        android:id="@+id/p2_score_hc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/between_home"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/p2_name_hc"/>

    <TextView
        android:id="@+id/striks_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_of_strikes"
        android:layout_below="@+id/p1_name_hc"
        android:layout_margin="@dimen/between_home"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/num_of_strikes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="75sp"
        android:textAlignment="center"
        android:text=""
        android:layout_below="@+id/striks_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/between_home" />

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="75sp"
        android:layout_below="@+id/num_of_strikes"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Q"
        android:layout_centerHorizontal="true"
        android:text="Only when you have finished (either 8 X's or complete word) click the Swap User button to clear the board and start your opponents turn"/>


