    <Button
        android:id="@+id/P"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="p"
        android:layout_above="@+id/A"
        android:layout_toRightOf="@+id/O"
        android:onClick="clickP"/>

    <Button
        android:id="@+id/change_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/M"
        android:layout_alignParentBottom="true"
        android:text="Change User"
        android:onClick="triggerUserChange"/>

</RelativeLayout>
