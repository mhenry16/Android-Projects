    <Button
        android:id="@+id/Z"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="z"
        android:layout_above="@+id/go_back"
        android:onClick="clickZ"/>

    <Button
        android:id="@+id/X"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="x"
        android:layout_above="@+id/go_back"
        android:layout_toRightOf="@+id/Z"
        android:onClick="clickX"/>

    <Button
        android:id="@+id/C"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="c"
        android:layout_above="@+id/go_back"
        android:layout_toRightOf="@+id/X"
        android:onClick="clickC"/>

    <Button
        android:id="@+id/V"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="v"
        android:layout_above="@+id/go_back"
        android:layout_toRightOf="@+id/C"
        android:onClick="clickV"/>

    <Button
        android:id="@+id/B"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="b"
        android:layout_above="@+id/go_back"
        android:layout_toRightOf="@+id/V"
        android:onClick="clickB"/>

    <Button
        android:id="@+id/N"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="n"
        android:layout_above="@+id/go_back"
        android:layout_toRightOf="@+id/B"
        android:onClick="clickN"/>

    <Button
        android:id="@+id/M"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="m"
        android:layout_above="@+id/go_back"
        android:layout_toRightOf="@+id/N"
        android:onClick="clickM"/>

    <Button
        android:id="@+id/A"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="a"
        android:layout_above="@+id/Z"
        android:onClick="clickA"/>

    <Button
        android:id="@+id/S"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="s"
        android:layout_above="@+id/Z"
        android:layout_toRightOf="@+id/A"
        android:onClick="clickS"/>

    <Button
        android:id="@+id/D"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
        android:text="d"
        android:layout_above="@+id/Z"
        android:layout_toRightOf="@+id/S"
        android:onClick="clickD"/>

    <Button
        android:id="@+id/F"
        android:layout_width="@dimen/keyboard_size"
        android:layout_height="@dimen/keyboard_size"
